:javascript
  $(document).ready(function(){ 
    $.getJSON("http://api.flickr.com/services/rest/?method=flickr.groups.pools.getPhotos&api_key=f65cddc72218d6629231015dbba534ab&group_id=1695312%40N23&tags=#{@spot.slug}&extras=tags&format=json&jsoncallback=?",
       function(data) {         
         $.each(data.photos.photo, function(i,item){
           var url_s = "http://farm"+item.farm+".static.flickr.com/"+item.server+"/"+item.id+"_"+item.secret+"_s.jpg";
           var url_m = "http://farm"+item.farm+".static.flickr.com/"+item.server+"/"+item.id+"_"+item.secret+"_m.jpg";
           var url = "http://farm"+item.farm+".static.flickr.com/"+item.server+"/"+item.id+"_"+item.secret+".jpg";
           var url_b = "http://farm"+item.farm+".static.flickr.com/"+item.server+"/"+item.id+"_"+item.secret+"_b.jpg";
           if(i==0){$(".portrait").attr({ src: url });}
           var substr = item.tags.split(' ');           
           $.each(substr, function(j, item){
             if(item == 'spotadmin'){
               
               $('<li><a href="'+url+'"><img height="50px" width="50px" src="'+url_s+'"></img></a></li>').appendTo(".image_thumb").click(function(){
                   var imgTitle = $(this).find('a').attr("href");
                   if ($(this).is(".active")) {
                       return false;
                   } else { 
                     $(".portrait").attr({ src: imgTitle });
                   };
                   $(".image_thumb li").removeClass('active');
                   $(this).addClass('active');
                   return false; 
               });
             }
           });
             
           $('<a href="' +url_b+'" rel="hat" class="gallerypic"><img alt="jat" width="160" height="120" class="spot" src="'+url_m+'"></img><span class="zoom-icon"><img src="/images/FlickrSmall.png" alt="Zoom" width="160" height="120" /></span></a>').fancybox().appendTo("#foto");
         });
       });
       
    var place = (#{@spot.to_json});
    var latlng = new google.maps.LatLng(place["lat"], place["long"]);
    var myOptions = {
      zoom: 13,
      center: latlng,
      navigationControl: true,
      mapTypeControl: false,
      scaleControl: false,
      region: 'DK',
      mapTypeId: google.maps.MapTypeId.ROADMAP,
      suppressInfoWindows: true
      };
    var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
    var marker = new google.maps.Marker({
      position: new google.maps.LatLng(place["lat"], place["long"]),
      map: map
      });
     var infowindow = new google.maps.InfoWindow(
         { content: place["title"]
         });
     google.maps.event.addListener(marker, 'click', function() {
         infowindow.open(map,marker);
       });
     marker.setMap(map);
     var switchTo5x=true;
     stLight.options({publisher:'1bef05f7-1745-4681-a2b4-74155bc4ae0a'});
     $(".directions a").attr("href", "http://maps.google.dk/maps?hl=da&z=14&saddr=&daddr="+place["lat"]+","+place["long"]);
  }); 
%div{:id => 'wrapper'}
  %aside{:id => 'sidebar'}
    %div{:id=>'map_canvas', :style=>"height:335px;width:300px;"}
    %div.grey
      Share this spot with a friend
      %span.st_facebook_button{:displayText=>'Facebook'}
      %span.st_twitter_button{:displayText=>'Tweet'}
      %span.st_email_button{:displayText=>'Email'}
    %div.directions Get <a href="http://maps.google.dk">directions</a> to this spot  
    
  %section{:id => 'contents'}
    %article.overview
      %img{:width => 500, :height => 335, :class => 'portrait'}
      %ul.image_thumb
      %h2.title= '#'+ @spot.sequence.to_s + ' '+ @spot.title
      %p.teaser= @spot.teaser
      - if @spot.published_at
        %time{:datetime => @spot.published_at.strftime("%Y-%m-%d")}= @spot.published_at.strftime("%b %d, %Y")
      %article.contents= textile(@spot.body)
  %div.line
    %fieldset.in-reply-to-border
      %legend.in-reply-to-text live feed from selected spot
  %div.foto{:id => 'foto'}
    - @videos.each do |video|
      %a.gallerypic{:href=>"http://www.youtube.com/watch?v="+video.yt_id+"&feature=player_embedded#at=41", :title=>video.title, :rel=>"vidbox"}
        %img{:src => video.img_url, :alt => 'jat', :class => 'spot', :width=>160, :height=>120 }
%div{:id => 'footer_wrapper'}
  %footer
    %div{:id => 'footer_left'}
      %h2 CONTACT & INFO
    %div{:id => 'footer_right'}
      %h2 ALL SPOTS
      - @spots.each do |spot|
        %a{:href => "/spot/#{spot.slug}"} #{spot.title}